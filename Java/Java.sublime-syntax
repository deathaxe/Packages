          scope: punctuation.accessor.dot.java
          push:
            - match: (?={{id}})
              branch_point: entity-package-qualified-identifier
              branch: [entity-package-qualifier, entity-package-name]
            - match: (?=\S)
              pop: 3
        - match: (?=\S)
